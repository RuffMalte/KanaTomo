@model KanaTomo.ViewModels.AddAnkiItemViewModel

<div class="sticky-top" style="top: 180px;">
    <div class="alert alert-warning mb-4" role="alert">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <img src="~/images/icons8-anki.svg" height="40" width="40" alt="Anki logo" class="me-2"/>
                <span class="h3 fw-bold mb-0">Anki</span>
            </div>

            <button type="button" class="btn btn-link p-0" onclick="window.location.href='https://apps.ankiweb.net/'">
                <i class="bi bi-info-circle-fill h6"></i>
            </button>
        </div>
        <hr/>
        <div>
            <form asp-controller="Anki" asp-action="AddCard" method="post">
                <input type="hidden" asp-for="Front" />
                <input type="hidden" asp-for="Back" />
                <button type="submit" class="btn btn-warning w-100">
                    <i class="bi bi-plus"></i>
                    Add to Anki
                </button>
            </form>
        </div>
    </div>
</div>