@model (int DueCards, int TotalCards)

<div class="study-button-container mb-4">
    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <h5 class="card-title mb-3">Study Progress</h5>
            <div class="progress mb-3" style="height: 15px;">
                <div class="progress-bar bg-success" role="progressbar" 
                     style="width: @(Model.TotalCards > 0 ? (100 - (Model.DueCards * 100 / Model.TotalCards)) : 100)%;" 
                     aria-valuenow="@(Model.TotalCards - Model.DueCards)" aria-valuemin="0" aria-valuemax="@Model.TotalCards">
                </div>
            </div>
            <div class="d-flex justify-content-between mb-3">
                <small class="text-muted">@(Model.TotalCards - Model.DueCards) / @Model.TotalCards cards reviewed</small>
                <small class="text-muted">@Model.DueCards cards due</small>
            </div>
            <a href="@Url.Action("Review", "Anki")" class="btn btn-primary btn-lg w-100 d-flex align-items-center justify-content-center">
                <i class="bi bi-book me-2"></i>
                <span>Study Now</span>
                <span class="badge bg-light text-primary ms-2">@Model.DueCards</span>
            </a>
        </div>
    </div>
</div>