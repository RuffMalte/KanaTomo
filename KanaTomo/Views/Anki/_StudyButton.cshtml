@model (int DueCards, int TotalCards)

<div class="study-button-container mb-4">
    <div class="progress mb-2" style="height: 10px;">
        <div class="progress-bar bg-success" role="progressbar" 
             style="width: @(Model.TotalCards > 0 ? (100 - (Model.DueCards * 100 / Model.TotalCards)) : 100)%;" 
             aria-valuenow="@(Model.TotalCards - Model.DueCards)" aria-valuemin="0" aria-valuemax="@Model.TotalCards">
        </div>
    </div>
    <a href="@Url.Action("Review", "Anki")" class="btn btn-primary btn-lg w-100">
        <i class="bi bi-book"></i> Study Now
        <span class="badge bg-light text-dark ms-2">@Model.DueCards due</span>
    </a>
</div>